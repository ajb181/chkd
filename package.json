{
  "name": "chkd",
  "version": "0.2.0",
  "description": "Development quality control - spec-driven workflow",
  "type": "module",
  "scripts": {
    "dev": "node dev-server.js",
    "dev:vite": "vite dev --port 3847",
    "build": "vite build",
    "start": "node server.js",
    "preview": "vite preview --port 3847",
    "stable:build": "vite build && rm -rf build-stable && cp -r build build-stable",
    "stable": "HOST=0.0.0.0 PORT=3848 BUILD_DIR=build-stable node server.js",
    "start:terminal": "vite build && PORT=3848 node server.js",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json"
  },
  "bin": {
    "chkd": "./src/cli/index.ts"
  },
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@xterm/addon-fit": "^0.11.0",
    "better-sqlite3": "^11.0.0",
    "marked": "^17.0.1",
    "node-pty": "^1.1.0",
    "simple-git": "^3.22.0",
    "tsx": "^4.21.0",
    "ws": "^8.19.0",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.2.0",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@types/better-sqlite3": "^7.6.11",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
